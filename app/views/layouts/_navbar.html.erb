<div class="ui large inverted menu">
  <div class="ui container">
    <%= link_to "Chatroom", root_path, class: "item" %>
    <a class="item">
      Messages
    </a>
    <div class="right menu">
      <div class="ui dropdown item">
        Conta <i class="dropdown icon"></i>
        <div class="menu">
          <% if logged_in? %>
            <%= link_to "Sair", logout_path, method: :delete, class: "item" %>
          <% else %>
            <%= link_to "Entrar", login_path, class: "item" %>
          <% end %>
        </div>
      </div>
      <% if !logged_in? %>
        <div class="item">
          <div class="ui primary button">Inscreva-se</div>
        </div>
      <% end %>  
    </div>
  </div>
</div>